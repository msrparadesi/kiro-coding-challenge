# API Configuration
API_TITLE=Events API
API_VERSION=1.0.0
API_DESCRIPTION=FastAPI backend for managing events with DynamoDB

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080
CORS_ALLOW_CREDENTIALS=true

# DynamoDB Configuration
DYNAMODB_TABLE_NAME=EventsTable
AWS_REGION=us-east-1

# AWS Credentials (optional if using IAM roles or AWS CLI credentials)
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Validation Settings (optional - defaults are set in config.py)
# MAX_TITLE_LENGTH=200
# MAX_DESCRIPTION_LENGTH=1000
# MAX_LOCATION_LENGTH=200
# MAX_ORGANIZER_LENGTH=100
# MIN_CAPACITY=1
# MAX_CAPACITY=100000
